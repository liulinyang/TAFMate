			private function showDat(paraNameArray:Array, paraValueArray:Array):String
			{
				var result:String = ""						
				paraNameArray.join("|")
				paraValueArray.join("|")
				return result.concat(paraNameArray.join("|"), "\r\n",paraValueArray.join("|")) 
				
			}
		
			
